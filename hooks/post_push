
#!/bin/bash

echo "------------------------------------------------------------ post_push begin ---"

for tag in $(echo $DOCKER_TAG | tr "," "\n"); do
    if [ "${tag}" == "go2go" ]; then
        new_image_name="${DOCKER_REPO}:${tag}-$(date +%Y%m%d)"
        docker tag "${IMAGE_NAME}" "${new_image_name}"
        docker push "${new_image_name}"
    fi
done

echo "-------------------------------------------------------------- post_push end ---"
